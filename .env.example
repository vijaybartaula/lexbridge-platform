# Google AI Configuration (REQUIRED)
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_GENAI_API_KEY=your_google_genai_api_key_here

# Backup API key (optional - will use GOOGLE_GENAI_API_KEY if available)
GOOGLE_API_KEY=your_google_api_key_here

# Application Configuration
NEXT_PUBLIC_APP_NAME=LexBridge
NEXT_PUBLIC_APP_URL=https://lexbridge.vercel.app
NEXT_PUBLIC_SUPPORT_EMAIL=support@lexbridge.com

# Development Configuration
NODE_ENV=development

# Security Configuration (for future use)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Database Configuration (for future use)
DATABASE_URL=your_database_url_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/msword,text/plain

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600000
